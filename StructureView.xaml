<UserControl x:Class="DoseReview.StructureView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoseReview"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <ComboBox DockPanel.Dock="Top" Margin="10" Name="PlanBox" SelectionChanged="PlanBox_SelectionChanged"/>
        <DataGrid Name="StructureDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" DockPanel.Dock="Bottom"/>
        </DockPanel>
    </Grid>
</UserControl>
